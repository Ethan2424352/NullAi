<Application x:Class="NullAI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <!-- Define some global resources for a dark theme -->
    <Application.Resources>
        <Color x:Key="WindowBackgroundColor">#1E1E1E</Color>
        <Color x:Key="PanelBackgroundColor">#2D2D30</Color>
        <Color x:Key="ControlBackgroundColor">#3E3E42</Color>
        <Color x:Key="AccentColor">#007ACC</Color>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <!-- Style for buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <!-- Style for TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="6,3" />
        </Style>
    </Application.Resources>
</Application>