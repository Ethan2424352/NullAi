<Window x:Class="NullAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NullAI" Height="500" Width="850"
        Background="{StaticResource WindowBackgroundBrush}"
        Foreground="White">
    <Grid Margin="10">
        <!-- Header Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Content="Settings" Click="Settings_Click" />
            <Button Content="Train Voice" Click="TrainVoice_Click" />
        </StackPanel>
        <!-- Main content -->
        <TabControl x:Name="MainTabs" Margin="0,40,0,0">
            <!-- AI Chat Tab -->
            <TabItem Header="AI">
                <Grid Background="{StaticResource PanelBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!-- Scrollable chat area -->
                    <ScrollViewer Grid.Row="0" Margin="10">
                        <TextBox x:Name="ChatBox" IsReadOnly="True" TextWrapping="Wrap" Background="{StaticResource ControlBackgroundBrush}" BorderThickness="0" />
                    </ScrollViewer>
                    <!-- Input area -->
                    <Border Grid.Row="1" Background="{StaticResource ControlBackgroundBrush}" Margin="10" Padding="5">
                        <TextBox x:Name="InputBox" KeyDown="InputBox_KeyDown" Background="{StaticResource ControlBackgroundBrush}" BorderThickness="0" />
                    </Border>
                </Grid>
            </TabItem>
            <!-- Drawing Tab -->
            <TabItem Header="Draw">
                <Border Background="White" Margin="10" Padding="5">
                    <Canvas x:Name="DrawingCanvas" Background="White" />
                </Border>
            </TabItem>
            <!-- 3D Generator Tab -->
            <TabItem Header="3D">
                <Grid Background="{StaticResource PanelBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Model Description:" Margin="10,10,10,5" />
                    <TextBox x:Name="ModelDescription" Grid.Row="1" Margin="10,0,10,10" Background="{StaticResource ControlBackgroundBrush}" />
                    <Button Content="Generate" Grid.Row="1" HorizontalAlignment="Right" Margin="10" Click="GenerateModel_Click" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>