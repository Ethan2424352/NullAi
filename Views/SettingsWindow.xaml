<Window x:Class="NullAI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="API Keys" FontWeight="Bold" Margin="0,0,0,5" />
        <ListBox x:Name="KeyList" Grid.Row="1" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="75" Margin="0,0,5,0" Click="Add_Click" />
            <Button Content="Remove" Width="75" Click="Remove_Click" />
        </StackPanel>
    </Grid>
</Window>